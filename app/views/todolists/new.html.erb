<h1>投稿一覧</h1>
<% @books.each do |book| %>
    <p>タイトル</p>
<span><%=link_to book.title, todolist_path(book.id) %>
</span>
  <p>画像</p>
<%= attachment_image_tag book, :image, :fill,100,100, format: 'jpeg' %>
<% end %>









<h3>Books</h3>

<h3>New book</h3>
<!-- form for 部分-->
<%= form_for(@book, url: '/todolists') do |f| %>

	<h4>Title</h4>
    <%= f.text_field :title %>
    
    <h4>Body</h4>
	<%= f.text_area :body %>

    <h4>Image</h4>
    <%= f.attachment_field :image %>

	<%= f.submit 'Create Book' %>

<% end %>