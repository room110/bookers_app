<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<% if @book.errors.any? %>
<table>
	<font color="red">
       <p>2 errors prohibited this book from being saved:</p>
         <ul>
            <li>Title can't be blank</li>
            <li>Body can't be blank</li>
         </ul>
    </font>
</table>
<% end %>

<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book'%>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>
