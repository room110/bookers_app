<h1>Books</h1>
<table>
	
		<tr>
		  <th>Title</th>
		  <th>     </th>
    	  <th>Body</th>
        </tr>
    
     <% @books.each do |book| %>
        <tr>
  	       <th align="left"><%= book.title %><th>
           <th align="left"><%= book.body %><th>
           <th><%= link_to "Show", book_path(book.id) %><th>
           <th><%= link_to "Edit", edit_book_path(book.id) %></th>
           <th><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
       </tr>
     <% end %>
</table>



<h3>New book</h3>
<!-- form for 部分-->
<%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
<table>
	<font color="red">
       <p>2 errors prohibited this book from being saved:</p>
         <ul>
            <li>Title can't be blank</li>
            <li>Body can't be blank</li>
         </ul>
    </font>
</table>
<% end %>


	<h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Body</h4>
	  <%= f.text_area :body %>
   <P><%= f.submit 'Create Book' %></P>
<% end %>